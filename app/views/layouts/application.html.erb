<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if end_user_signed_in? %>
        <li><%= link_to "ロゴ", root_path %></li>
        <li><%= link_to "マイページ", end_users_path %></li>
        <li>商品一覧</li>
        <li>カート</li>
        <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %></li>
      <% elsif admin_signed_in? %>
        <li><%= link_to "ロゴ", admins_path %></li>
        <li>商品一覧</li>
        <li>会員一覧</li>
        <li>注文履歴一覧</li>
        <li>ジャンル一覧</li>
        <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "ロゴ", root_path %></li>
        <li>商品一覧</li>
        <li><%= link_to "新規登録", new_end_user_registration_path %></li>
        <li><%= link_to "ログイン", new_end_user_session_path %></li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
