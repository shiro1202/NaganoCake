<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <% if end_user_signed_in? %>
          <ul class="navbar-nav mr-auto">
            <h4><%= link_to "NaganoCake", root_path, class:"nav-link text-light" %></h4>
          </ul>
          <ul class="navbar-nav">
            <li><%= link_to "マイページ", end_users_path, class:"nav-link text-light" %></li>
            <li><%= link_to "商品一覧", public_items_path, class:"nav-link text-light" %></li>
            <li><%= link_to "カート", cart_items_path, class:"nav-link text-light" %></li>
            <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class:"nav-link text-light" %></li>
          </ul>
        <% elsif admin_signed_in? %>
          <ul class="navbar-nav mr-auto">
            <h4><%= link_to "NaganoCake", admins_path, class:"nav-link text-light" %></h4>

          </ul>
          <ul class="navbar-nav">
            <li><%= link_to "商品一覧", items_path, class:"nav-link text-light" %></li>
            <li><%= link_to "会員一覧", admins_end_users_path, class:"nav-link text-light" %></li>
            <li><%= link_to "注文履歴一覧", admins_path, class:"nav-link text-light" %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path, class:"nav-link text-light" %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"nav-link text-light" %></li>
            <%= search_form_for @search, url: items_path do |f| %>
              <%= f.text_field :name_cont, placeholder: 'Search' %>
              <%= f.submit "検索", class: "btn btn-outline-light" %>
            <% end %>
          </ul>
        <% else %>
          <ul class="navbar-nav mr-auto">
            <h4><%= link_to "NaganoCake", root_path, class:"nav-link text-light" %></h4>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-link text-light">商品一覧</li>
            <li><%= link_to "新規登録", new_end_user_registration_path, class:"nav-link text-light" %></li>
            <li><%= link_to "ログイン", new_end_user_session_path, class:"nav-link text-light" %></li>
          </ul>
        <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
