<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-rows">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_orders_show_path do %>
                <%= order.created_at.strftime('%Y/%m/%d/%H/%M/%S') %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td>
              <% @sum = 0 %>
              <% order.order_details.each do |detail| %>
                <% @sum += detail.amount %>
              <% end %>
              <%= @sum %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>