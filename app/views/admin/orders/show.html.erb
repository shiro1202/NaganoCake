<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <div class="col">
      <table>
      <tr>
        <th>購入者</th>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <th>購入日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
          　<%= f.select :status, Order.statuses_i18n.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]} %>
          <%= f.submit "更新", class: "btn btn-success btn-sm" %>
        </td>
          <% end %>
        </tr>
      </table>
      <div class="row">
      <div class="col-md-9">
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @sum = 0 %>
            <%  @order_details.each do |detail| %>
            <tr>
              <td><%= detail.item.name %></td>
              <td><%= detail.item.tax_included_price %></td>
              <td><%= detail.amount %></td>
              <td>¥<%= detail.item.tax_included_price * detail.amount %></td>
              <% @sum += detail.item.tax_included_price * detail.amount %>
              <%= form_with model: detail, url: admin_order_detail_path(detail), method: :patch, local:true do |f| %>
              <td><%= f.select :production_status, OrderDetail.production_statuses_i18n.keys.map{|k| [I18n.t("enums.order_detail.production_status.#{k}"), k]} %></td>
              <td><%= f.submit "更新" ,class: "btn btn-success btn-sm" %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class= "col-md-2 offset-md-1 align-self-center">
        <table>
          <tr>
            <th>商品合計</th>
            <td>¥<%= @sum %></td>
          </tr>
          <tr>
            <th>送料</th>
            <td>¥800</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td>¥<%= @sum + 800 %></td>
          </tr>
          </table>
      </div>
    </div>
  </div>
</div>