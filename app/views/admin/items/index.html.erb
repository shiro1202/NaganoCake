<div class="container">
  <div class="row">
    <div class="col">
    <h2>商品一覧</h2>
    <%= link_to "+", new_item_path, class: 'btn btn-primary' %>
    <table class='table'>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @search_items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.no_tax_price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.is_sold == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>