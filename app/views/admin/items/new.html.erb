<div class="container">
  <div class="row">
    <div class="col">

    <h2>商品</h2>

    <%= form_with model: @item, local:true do |f| %>
      <h4>商品画像</h4>
      <%= f.attachment_field :image %>
      <h4>タイトル</h4>
      <%= f.text_field :name %>
      <h4>説明文</h4>
      <%= f.text_area :description %>
      <h4>ジャンル名</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
      <h4>値段</h4>
      <%= f.text_field :no_tax_price %>
      <h4>販売ステータス</h4>
      <div>
        <%= f.radio_button :is_sold, true %>
        <%= f.label :is_sold, '販売中', value: true %>
      </div>
      <div>
        <%= f.radio_button :is_sold, false %>
        <%= f.label :is_sold, '販売停止中', value: false %>
      </div>
      <%= f.submit '新規登録' %>
    <% end %>

    </div>
  </div>
</div>
