<div class="container">
  <div class="row">
    <div class="col">
    <h2>ジャンル一覧・追加</h2>
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <%= f.text_field :name %>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>

    <table class='table'>
        <tr>
          <th>ジャンル</th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", admin_genres_edit_path(genre), class: "col-xs-12 btn btn-primary" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

