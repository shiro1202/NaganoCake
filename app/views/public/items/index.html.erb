<div class="container">
  <div class="row">
    <div class="col">
    <h2>商品一覧</h2>

    <% @items.each do |item| %>
      <div class="card" style="width:300px;">
        <%= attachment_image_tag(item, :image) %>
        <%= item.name %>
        <%= item.no_tax_price %>
        <%= link_to "詳細を見る", class: 'btn btn-primary' %>
        </div>
    <% end %>

  </div>
</div>
