<div class="container">
  <div class="row">
    <h2>ショッピングカート</h2>
    <div class = 'pull-right'>
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger", data: {confirm:"本当に削除しますか？"}%>
    </div>

    <table class='table'>
      <tr>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <% item = cart_item.item %>
        <td>
          <%= attachment_image_tag(item, :image, :width => "60", :height => "60") %><%= item.name %>
        </td>
        <td>
          <%= item.tax_included_price %>
        </td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local:true do |f| %>
            <%= f.number_field :amount %>
            <%= f.submit "変更", class: "btn btn-primary" %>
          <% end %>
        </td>
        <td>
          <%= item.tax_included_price * cart_item.amount %>
        </td>
        <td>
          <% @sum += item.tax_included_price * cart_item.amount %>
        </td>
        <td>
          <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="col-md-8">
      <%= link_to "買い物を続ける", end_users_path, class: "btn btn-primary" %>
      <h5>合計金額</h5>
      ￥<%= @sum %>
    </div>
    <div class= "col-md-4">
      <%= link_to "情報入力に進む", orders_new_path, class: "btn btn-primary" %>
    </div>

  </div>
</div>