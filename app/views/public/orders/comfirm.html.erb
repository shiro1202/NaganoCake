<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>注文情報確認</h2>
    </div>
    <div class="col-md-8">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @sum = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <% item = cart_item.item %>
            <td>
              <%= attachment_image_tag(item, :image, :width => "30", :height => "30") %>
              <%= item.name %>
            </td>
            <td>¥<%= item.tax_included_price %></td>
            <td><%= cart_item.amount %></td>
            <td>¥<%= item.tax_included_price * cart_item.amount %></td>
            <% @sum += item.tax_included_price * cart_item.amount %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-hover table-condensed table-bordered">
        <tbody>
          <tr>
            <th>送料</th>
            <td>¥800</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td>¥<%= @sum %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td>¥<%= @sum + 800 %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12">
      <h4>支払方法></h4>
        <p>
          <%= @order.payment_method_i18n %>
        </p>
      <h4>お届け先</h4>
        <p>
          〒<%= @order.postal_code %><%= @order.address %><br>
          <%= @order.name %>
        </p>

      <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :shipping_cost, value: 800 %>
        <%= f.hidden_field :total_payment, value: @sum %>
        <% @cart_items.each do |cart_item|%>
          <% item = cart_item.item %>
          <%= f.fields_for :order_details do |s| %>
            <%= s.hidden_field :amount, value: cart_item.amount %>
            <%= s.hidden_field :tax_included_price, value: item.tax_included_price %>
            <%= s.hidden_field :item_id, value: item.id %>
            <%= s.hidden_field :order_id , value: @order.id %>
          <% end %>
        <% end %>
        <%= f.submit "注文を確定する", data: {confirm: "本当によろしいですか？"}, class: "btn btn-success mt-3 mb-3" %>
      <% end %>
    </div>
  </div>
</div>