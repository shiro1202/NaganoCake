<div class="container">
  <h2>注文情報入力</h2>
  <div class="row">
    <div class="col">

      <%= form_with model: @order, url: orders_comfirm_path, method: :post, local:true do |f| %>
      <h4>支払方法</h2>
      <label><%= f.radio_button :payment_method, 0, checked: "checked"%> クレジットカード </label><br>
      <label><%= f.radio_button :payment_method, 1 %> 銀行振込</label>

      <h4>お届け先</h4>
      <label><%= f.radio_button :address_option, "0", checked: "checked"%> ご自身の住所 </label><br>
        <div><%= current_end_user.postal_code %> <%= current_end_user.address %><br><%= current_end_user.last_name %><%= current_end_user.first_name %><br><br>
        </div>
      <label><%= f.radio_button :address_option, "1" %> 登録済からの選択</label><br>
        <div><%= f.collection_select :address, @addresses, :id, :address_all %><br><br>
        </div>
      <label><%= f.radio_button :address_option, "2" %> 新しいお届け先</label><br>
        <div>
          <h4>郵便番号</h4>
          <%= f.text_field :postal_code %>
          <h4>住所</h4>
          <%= f.text_field :address %>
          <h4>宛名</h4>
          <%= f.text_field :name %>
        </div>
      <%= f.submit "確認画面に進む", class: "btn btn-primary" %>

    <% end %>

    </div>
  </div>
</div>