<div class="container">
  <div class="row">
    <div class="col">

    <h2>会員情報編集</h2>

    <%= form_with model: @user, url: end_users_path, method: :patch, local:true do |f| %>
      <h4>氏名</h4>
      <%= f.text_field :last_name %><%= f.text_field :first_name %>
      <h4>フリガナ</h4>
      <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
      <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
      <h4>住所</h4>
      <%= f.text_field :address %>
      <h4>電話番号</h4>
      <%= f.text_field :telephone %>
      <h4>メールアドレス</h4>
      <%= f.text_field :email %>
      <%= f.submit '変更内容を保存' %>
    <% end %>

    <%= link_to '退会する', end_users_confirm_path, class: 'btn btn-danger' %>
    </div>
  </div>
</div>